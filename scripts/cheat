#!/bin/bash

# Check if the user provided any arguments
if [[ -z "$1" ]]; then
  echo "Usage: $0 <topic> [topic-specific-query]"
  echo "Example: $0 python/list"
  exit 1
fi

# Build the query string by replacing spaces with hyphens or
# plus signs
# The 'shift' command and 'tr' approach is a bit complex for
# a simple tool
# This new approach is more direct and effective.
query=$(printf "%s\n" "$*" | tr ' ' '/')

# Make the curl request
echo "Querying cht.sh for $query..."
curl "https://cht.sh/$query"
