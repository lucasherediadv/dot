# unbind default keys
unbind-key ENTER
unbind-key h
unbind-key j 
unbind-key J 
unbind-key k
unbind-key K
unbind-key l
unbind-key q

# vi style keys
bind-key j down
bind-key k up
bind-key l open
bind-key h quit
bind-key q hard-quit

# layout
text-width 72 
show-keymap-hint no
show-title-bar no
max-items 10

# borwser
browser "firefox %u"

# gruvbox colorscheme
include /usr/share/doc/newsboat/contrib/colorschemes/gruvbox
